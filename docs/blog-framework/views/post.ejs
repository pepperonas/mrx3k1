<article class="post">
    <div class="post-header">
        <div class="category-tag <%= post.category %>"><%= post.category %></div>
        <h1><%= post.title %></h1>
        <div class="post-meta">
            <span class="date"><%= new Date(post.date).toLocaleDateString('de-DE', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                }) %></span>
        </div>
        <% if (post.tags && post.tags.length > 0) { %>
            <div class="tags">
                <% post.tags.forEach(tag => { %>
                    <span class="tag"><%= tag %></span>
                <% }) %>
            </div>
        <% } %>
    </div>

    <div class="post-content">
        <%- post.content %>
    </div>
</article>